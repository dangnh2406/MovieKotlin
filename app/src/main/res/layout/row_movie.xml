<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/row_movie_title_txt"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/row_movie_poster_img"

        android:layout_below="@+id/row_movie_title_txt"
        android:layout_width="150dp"
        android:layout_height="170dp"/>
    <TextView
        android:id="@+id/row_movie_release_txt"
        android:layout_below="@+id/row_movie_title_txt"
        android:layout_toRightOf="@+id/row_movie_poster_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/row_movie_rating_txt"
        android:layout_toRightOf="@+id/row_movie_poster_img"
        android:layout_below="@+id/row_movie_release_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/row_movie_overview"
        android:layout_toRightOf="@+id/row_movie_poster_img"
        android:layout_below="@+id/row_movie_rating_txt"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/row_movie_overview_title"
        android:layout_toRightOf="@id/row_movie_poster_img"
        android:layout_below="@+id/row_movie_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        />

<LinearLayout
    android:orientation="horizontal"
    android:id="@+id/soso"
    android:layout_width="wrap_content"
    android:layout_below="@+id/row_movie_poster_img"
   android:layout_alignRight="@+id/row_movie_poster_img"
    android:layout_alignParentRight="true"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/row_movie_like_img"
        android:layout_margin="8dp"
        android:src="@drawable/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/row_movie_unlike_img"
        android:layout_margin="8dp"
        android:src="@drawable/unlikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
</RelativeLayout>